//删除docker旧版本，CentOS 7为例


[root@iZj6cbqclrwugy0a8ke5qbZ halo]# sudo yum remove docker \
>                 docker-client \
>                 docker-client-latest \
>                 docker-common \
>                 docker-latest \
>                 docker-latest-logrotate \
>                 docker-logrotate \
>                 docker-engine
